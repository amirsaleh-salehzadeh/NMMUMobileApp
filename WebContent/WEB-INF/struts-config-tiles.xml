<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
	<data-sources />
	<form-beans />
	<global-exceptions />
	<global-forwards />
	<action-mappings>
		<action  path="/t_security"
			type="struts.actions.tiles.T_SecurityAction">
			<set-property property="cancellable" value="true" />
			<forward name="roleManagement" path="page.security" />
			<forward name="roleEdit" path="page.security" />
			<forward name="roleGrid" path="page.security" />
			<forward name="groupManagement" path="page.security" />
			<forward name="groupEdit" path="page.security" />
			<forward name="groupGrid" path="page.security" />
		</action>
		<action  path="/t_user"
			type="struts.actions.tiles.T_UserAction">
			<set-property property="cancellable" value="true" />
			<forward name="userManagement" path="page.security" />
			<forward name="userEdit" path="page.security" />
			<forward name="userGrid" path="page.security" />
		</action>
		<action  path="/t_location"
			type="struts.actions.tiles.T_UserAction">
			<set-property property="cancellable" value="true" />
			<forward name="locationManagement" path="page.security" />
			<forward name="locationEdit" path="page.security" />
			<forward name="locationGrid" path="page.security" />
		</action>

	</action-mappings>
	<message-resources parameter="mic.crm.struts.tiles.ApplicationResources" />
	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
		<set-property property="moduleAware" value="true" />
		<set-property property="definitions-parser-validate"
			value="true" />
	</plug-in>
</struts-config>

